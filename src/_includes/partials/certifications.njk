{% if collections.certifications.length %}
<ol class="entrylist" reversed>
{% for cert in collections.certifications | reverse %}
    <li class="entrylist__item">
    {% if cert.data.url %}
        <h3 class="entry__title"><a href="{{ cert.data.url }}">{{ cert.data.title }}</a></h3>
    {% else %}
        <h3 class="entry__title">{{ cert.data.title }}</h3>
    {% endif %}
        <time datetime="{{ cert.data.date | dateToFormat("yyyy-MM-dd") }}">
            {{ cert.data.date | dateToFormat("d LLLL yyyy") }}
        </time>
        <span aria-hidden="true">&middot;</span>
        <span>{{ cert.data.organization }}</span>
    </li>
{% endfor %}
</ol>
{% endif %}